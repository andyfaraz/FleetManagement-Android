<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context=".SafetyReport">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Enter Incident Details"
        android:id="@+id/safetyText"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp"
        android:background="#d7d8f9"
        android:capitalize="words"
        android:padding="5dp"
        android:textAlignment="center"
        android:textColor="#eb1c1c"
        android:textColorHighlight="#973737"
        android:textSize="25dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/safetyDetails"
        android:layout_below="@+id/safetyText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Enter Details" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Take Photo"
        android:id="@+id/photoButton"
        android:layout_below="@+id/safetyDetails"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#b4b3f2" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pick Time"
        android:id="@+id/safetyTime"
        android:layout_below="@+id/photoButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Submit Incident"
        android:id="@+id/incidentSafety"
        android:layout_below="@+id/safetyTime"
        android:layout_centerHorizontal="true"
        android:background="#eeac48" />

</RelativeLayout>